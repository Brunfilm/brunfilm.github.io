{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "paths": {
            "@/*": ["./src/.vitepress/*"],
            "vite": ["./node_modules/vite"]
        },
        "resolveJsonModule": true,
        "rootDir": ".",
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ESNext",
        "types": ["node", "vitepress", "vite/client", "@types/node"]
    },
    "include": ["./.*", "./*.*", "./**/*.*"],
    "exclude": [
        "./node_modules/",
        "./src/.vitepress/dist/",
        "./tests/",
        "./src/.vitepress/cache/",
        "./src/**/*.ts",
        "./src/**/*.d.ts",
        "./src/**/*.vue",
        "./src/.vitepress/**/*.ts",
        "./src/.vitepress/**/*.d.ts",
        "./src/.vitepress/**/*.vue",
        "./coverage/",
        "./package-lock.json"
    ]
}
