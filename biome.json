{
    "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
    "files": {
        "ignore": [],
        "ignoreUnknown": false
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 99,
        "useEditorconfig": true
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "a11y": {
                "all": true
            },
            "complexity": {
                "all": true
            },
            "correctness": {
                "all": true
            },
            "nursery": {
                "all": false
            },
            "performance": {
                "all": true
            },
            "recommended": true,
            "security": {
                "all": true
            },
            "style": {
                "all": true,
                "noDefaultExport": "off"
            },
            "suspicious": {
                "all": true
            }
        }
    },
    "organizeImports": {
        "enabled": true
    },
    "vcs": {
        "clientKind": "git",
        "defaultBranch": "main",
        "enabled": true,
        "useIgnoreFile": true
    }
}
